<div class="review">
	<div class="review-rating" data-score="<%= review.rating %>"></div>
	<p class="review-comment"><%= review.comment %></p>

		<% if user_signed_in? %>
		<% if review.user_id == current_user.id %>
			<%= link_to("Edit", edit_book_review_path(review.book, review) , {class: "btn btn-md btn-warning"}) %>
			<%= link_to "Delete", book_review_path(review.book, review), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-md btn-danger" %>
		<% end %>
		<% end %>
</div><!--/.review-->

<script>
	$('.review-rating').raty({
		readOnly: true,
		score: () => {
			return $(this).attr('data-score');
		},
		path: '/assets/'
	});
</script>