<div class="col-md-6 col-md-offset-3">
	<div class="edit-book-form">
		<h1>Edit "<%= @book.title %>" book</h1>

		<%= simple_form_for @book, :html => { :multipart => true } do |form| %>
			<%= form.select :category_id, @categories, class: "form-control" %>
			<%= form.file_field :book_img %>
			<%= form.input :title, label: "Book Title" %>
			<%= form.input :description, label: "Book Description" %>
			<%= form.input :author, label: "Author" %>
			<%= form.button :submit, { class: "btn btn-md btn-success" } %>
			<%= link_to "Return", root_path, { class: "btn btn-default btn-md"} %>
		<% end %>
	</div><!--/.edit-book-form-->
</div>